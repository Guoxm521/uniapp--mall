page {
  background-color: #f8f8f8;
}
.information {
  margin: 0 25rpx;
}
.information .time {
  font-size: 26rpx;
  display: block;
  text-align: center;
  margin: 26rpx 0;
}
.information .content {
  width: 100%;
  padding: 0 24rpx;
  background-color: #FFFFFF;
}
.information .content .title {
  font-size: 32rpx;
  display: block;
  height: 90rpx;
  line-height: 90rpx;
}
.information .content .image {
  width: 100%;
  height: 260rpx;
}
.information .content .desc {
  display: block;
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 10rpx;
}
.information .content .detail {
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #F1F1F1;
  color: #606266;
}
.information .content .detail text {
  float: right;
  font-size: 40rpx;
}

